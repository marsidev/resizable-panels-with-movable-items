{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/**/*.js",
    "**/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
